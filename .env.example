# Prophetic Emergentomics Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration (Choose one provider)
# =============================================================================

# Anthropic Claude (Recommended)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514

# OpenAI (Alternative)
# OPENAI_API_KEY=your-openai-api-key-here
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4-turbo-preview

# =============================================================================
# GDELT Configuration
# =============================================================================

# GDELT API settings (usually don't need to change)
GDELT_REQUESTS_PER_MINUTE=60
GDELT_MAX_RETRIES=3
GDELT_LOOKBACK_HOURS=24

# =============================================================================
# CAG Configuration
# =============================================================================

# Context Augmented Generation settings
CAG_SYNTHESIS_DEPTH=moderate  # shallow, moderate, deep
CAG_EMERGENCE_THRESHOLD=0.7
CAG_ANOMALY_SENSITIVITY=0.8

# =============================================================================
# Application Settings
# =============================================================================

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
DEBUG=false

# Feature flags
ENABLE_GDELT_INTEGRATION=true
ENABLE_LLM_SYNTHESIS=true
ENABLE_PATTERN_DETECTION=true
ENABLE_OPPORTUNITY_ALERTS=true

# Data storage
MEDALLION_DATA_DIR=data
MEDALLION_BRONZE_RETENTION_DAYS=90
MEDALLION_SILVER_RETENTION_DAYS=365
MEDALLION_GOLD_RETENTION_DAYS=-1  # -1 = infinite
